---
import "../styles/global.css";

type NavDic = {
  [key: string]: string;
};

const apartados: NavDic = {
  "¿Quienes somos?": "trabajando",
  Historia: "historia",
  Partidos: "partidos",
};
---

<nav class="bg-gradient-to-r from-soccerblue to-soocerred">
  <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
    <div class="relative flex h-16 items-center justify-between">
      <div
        class="flex flex-1 items-center justify-center sm:items-stretch sm:justify-start"
      >
        <div class="flex flex-shrink-0 items-center">
          <a href="/">
            <img
              class="h-11 w-auto"
              src="/logo.png"
              alt="Logo de nuestra academia"
            />
          </a>
        </div>
        <div class="hidden sm:ml-6 sm:block">
          <div class="flex space-x-4">
            {
              //crear apartados automaticamente
              Object.keys(apartados).map((apartado) => {
                const href = apartados[apartado];
                return (
                  <a
                    href={href}
                    class="text-gray-300 hover:bg-gray-700 hover:text-white rounded-md px-3 py-2 text-sm font-medium"
                  >
                    {apartado}
                  </a>
                );
              })
            }
          </div>
        </div>
      </div>
      <div
        class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0"
      >
        <a href="trabajando" class="dark:text-white p-2 bg-green-600 rounded"
          >¡Apoyanos!</a
        >
      </div>
    </div>
  </div>
</nav>
